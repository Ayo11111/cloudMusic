/* 轮播图区域 */
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 五个图标导航区域 */
.navContainer {
    display: flex;
    justify-content: space-around;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 50rpx;
    border-radius: 50%;
    color: #fff;
    background: rgb(240, 19, 19);
    margin: 20rpx 0;
}

.navItem text {
    font-size: 26rpx;
}

/* 推荐歌曲区域 */
.recommendContainer {
    margin-top: 50rpx;
}


.scorllContainer {
    display: flex;
    margin-top: 30rpx;
    height: 300rpx;
    margin-left: 20rpx
}

.scrollItem {
    width: 200rpx;
    margin-right: 15rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    font-size: 26rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

