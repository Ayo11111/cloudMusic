/* 头部区域 */
.recommendSongContaier .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}

.header image {
    width: 100%;
    height: 100%;
}

.header .date {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    line-height: 100rpx;
    color: white;
}

.header .date .day{
    font-size: 50rpx;
}