/* 头部区域 */
.videoContainer .header {
    display: flex;
    padding: 10rpx;
}

.header image {
    width: 60rpx;
    height: 60rpx;
}

.header .search {
    flex: 1;
    border: 1rpx solid #eee;
    font-size: 26rpx;
    margin: 0 10rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
}

/* 导航区域 */
.navScroll {
    display: flex;
    white-space: nowrap;
}

.navScroll .navItem {
    margin: 0 20rpx;
    font-size: 26rpx;
    text-align: center;
}

.navScroll .navContent {
    padding-bottom: 6rpx;
}

.navScroll .active {
    border-bottom: 1rpx solid #d43c33;
}