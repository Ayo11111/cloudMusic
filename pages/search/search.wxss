.searchContainer{
  padding-left: 20rpx;
}

.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx;
}

.searchInput {
  position: relative;
  flex:1;
  border-radius: 30rpx;

}

.cancel {
  width: 100rpx;
  text-align: center;
}

.searchIcon {
  position: absolute;
  left: 15rpx;
}

.searchInput input {
  margin-left: 50rpx;
  height: 60rpx;
}

.placeholder{
  /* color: #d43c33; */
  font-size: 28rpx ;
}

/* 热搜榜部分 */
.hotContainer .title {
  margin: 40rpx 0;
  border-bottom: 1rpx solid #eee;
}

.hotList {
  display: flex;
  flex-wrap: wrap;
}

.hotItem {
  width:   50%;
  height: 70rpx;
  line-height: 70rpx;
}

.hotItem .order {
  margin:0 10rpx;
}